---
{{ ansible_managed | comment }}
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable

ignore: |
  .cache/
{% if generator_molecule_wflow_test is defined %}
  # This files use the Jinja 2 `to_nice_yaml` filter which does not create
  # yamllint compatible files.
  .github/workflows/molecule.yml
{% endif %}

